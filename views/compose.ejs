<%- include ('partials/header.ejs') -%>

<h1 class="post-blog mt-2"> Write Something Cool! </h1>
<div class="row">
  <div class="col-md-12 mt-4">
    <form action="/compose" method="post">
      <div class="form-group">
        <input type="text" name="title" class="form-control" placeholder="Blog Title" maxlength="10" autofocus>
      </div>
      <div class="form-group">
        <textarea name="description" id="description" class="form-control" rows="5" placeholder="Write your ideas..." maxlength="140"></textarea>
      </div>
      <button type="submit" class="btn btn-write" >Publish</button>
    </form>
  </div>
</div>

<%- include ('partials/footer.ejs') -%>